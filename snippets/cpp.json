{
	// Place your snippets for cpp here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"For loop an Array": {
		"prefix": "forc",
		"body": [
			"for(int $index = 0; $index < num; ++$index){",
			"\t",
			"}"
		],
		"description": "for index through an Array"
	},
	
	"Include library": {
		"prefix": "inc",
		"body": [
			"#include <bits/stdc++.h>",
			"using namespace std;",
			"#define MAX 100001",
			"",
			"void $function(){",
			"\t",
			"}",
			"int main(){",
			"\t",
			"return 0;",
			"}",
		],
	},

	"Print Function": {
		"prefix": "prinf",
		"body": [
			"void printArr(int * arr, int num){",
			"\tfor(int $index = 0; $index < num; ++$index){",
			"\t\tcout << arr[index] << \" \";",
			"\t}",
			"\tcout << '\\n';",
			"}",
		],
	},

	"Enter Function": {
		"prefix": "cinf",
		"body": [
			"void enterArr(int * arr, int num){",
			"\tfor(int $index = 0; $index < num; ++$index){",
			"\t\tcin >> arr[index];",
			"\t}",
			"}",
		]
	},
	"Void Function": {
		"prefix": "voif",
		"body": [
			"void $function(){",
			"\t",
			"}",
		],
	},

	"Int Function": {
		"prefix": "intf",
		"body": [
			"int $function(){",
			"\t",
			"}",
		],
	},

	"Do While": {
		"prefix": "dowh",
		"body": [
			"do{",
			"\t",
			"}while();",
		],
	},

	"Cin Num Arr": {
		"prefix": "cinna",
		"body": [
			"int number;",
  		"cin >> number;",
  		"int array[number];",
		],
	}
}